# Database Configuration
# Replace with your actual Prisma database URL
# For Prisma Accelerate: prisma://accelerate.prisma-data.net/?api_key=YOUR_API_KEY
# For local PostgreSQL: postgresql://username:password@localhost:5432/database_name
DATABASE_URL="YOUR_DATABASE_URL_HERE"

# JWT Configuration
# Replace with a strong, random secret for JWT token signing
# You can generate one using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="YOUR_JWT_SECRET_HERE"

# Optional: Node Environment
# NODE_ENV="development"

# Optional: Port for local development (if not using Cloudflare Workers)
# PORT=3000

# Optional: CORS Configuration
# CORS_ORIGIN="http://localhost:5173"

# Optional: Logging Level
# LOG_LEVEL="info"
